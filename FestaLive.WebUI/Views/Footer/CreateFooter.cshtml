@model Footer

@{
    ViewData["Title"] = "Footer Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Admin Paneli</a></li>
                            <li class="breadcrumb-item"><a href="/Footer/FooterList">Footer Listesi</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Footer Ekle</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">Footer Ekle</h3>
        </div>
        <div class="card-body">
            <form asp-action="CreateFooter" method="post">
                <div class="form-group">
                    <label for="phone">Telefon</label>
                    <input type="text" id="phone" name="Phone" class="form-control" asp-for="Phone" required>
                </div>
                <div class="form-group">
                    <label for="email">E-posta</label>
                    <input type="email" id="email" name="EMail" class="form-control" asp-for="EMail" required>
                </div>
                <div class="form-group">
                    <label for="location">Konum</label>
                    <input type="text" id="location" name="Location" class="form-control" asp-for="Location" required>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a href="/Footer/FooterList" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>
