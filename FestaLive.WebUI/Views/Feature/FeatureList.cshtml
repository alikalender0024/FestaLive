@model List<Feature>

@{
    ViewData["Title"] = "Feature List";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Admin Paneli</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Öne Çıkanları Listele</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="/Feature/CreateFeature" class="btn btn-sm btn-success">Yeni Öne Çıkan Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">Öne Çıkan Listesi</h3>
        </div>
        <div class="card-body">
            <div class="card-sub">
                Öne Çıkanlarla ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                <hr />
            </div>
            <div class="table-responsive">
                <table class="table align-items-center">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Başlık</th>
                            <th scope="col">Alt Başlık</th>
                            <th scope="col">Başlangıç Tarihi</th>
                            <th scope="col">Bitiş Tarihi</th>
                            <th scope="col">Konum</th>
                            <th scope="col">Resim URL</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var feature in Model)
                        {
                            <tr>
                                <td>@feature.Id</td>
                                <td>@feature.Title</td>
                                <td>@feature.Subtitle</td>
                                <td>@feature.StartDate.ToString("dd MMM yyyy")</td>
                                <td>@feature.EndDate.ToString("dd MMM yyyy")</td>
                                <td>@feature.Location</td>
                                <td><img src="@feature.ImageUrl" alt="@feature.Title" style="max-width: 100px; max-height: 100px;" /></td>
                                <td><a href="/Feature/DeleteFeature/@feature.Id" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Feature/UpdateFeature/@feature.Id" class="btn btn-warning">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mt-4">
                    <a href="/Feature/CreateFeature" class="btn btn-success">Yeni Öne Çıkan Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
