@model List<Plan>

<section class="pricing-section section-padding section-bg" id="section_5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-12 mx-auto">
                <h2 class="text-center mb-4">Seveceğiniz Planlar</h2>
            </div>
        </div>

        <div class="row">
            @for (int i = 0; i < Model.Count; i += 2)
            {
                <div class="row">
                    <div class="col-lg-6 col-12">
                        <div class="pricing-thumb">
                            <div class="d-flex">
                                <div>
                                    <h3><small>@Model[i].Title</small> &#8378;@Model[i].Price</h3>
                                    <p>@Model[i].Description:</p>
                                </div>
                                @if (!string.IsNullOrEmpty(Model[i].DiscountRate) && double.TryParse(Model[i].DiscountRate, out double discountRate) && discountRate > 0)
                                {
                                    <p class="pricing-tag ms-auto">Kadar tasarruf edin <span>@Model[i].DiscountRate%</span></p>
                                }
                            </div>
                            <ul class="pricing-list mt-3">
                                @if (Model[i].Features != null)
                                {
                                    foreach (var feature in Model[i].Features)
                                    {
                                        <li class="pricing-list-item">@feature</li>
                                    }
                                }
                            </ul>
                            <a class="link-fx-1 color-contrast-higher mt-4" href="ticket.html">
                                <span>Bilet Satın Al</span>
                                <svg class="icon" viewBox="0 0 32 32" aria-hidden="true">
                                    <g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
                                        <circle cx="16" cy="16" r="15.5"></circle>
                                        <line x1="10" y1="18" x2="16" y2="12"></line>
                                        <line x1="16" y1="12" x2="22" y2="18"></line>
                                    </g>
                                </svg>
                            </a>
                        </div>
                    </div>

                    @if (i + 1 < Model.Count)
                    {
                        <div class="col-lg-6 col-12">
                            <div class="pricing-thumb">
                                <div class="d-flex">
                                    <div>
                                        <h3><small>@Model[i + 1].Title</small> &#8378;@Model[i + 1].Price</h3>
                                        <p>@Model[i + 1].Description:</p>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model[i + 1].DiscountRate) && double.TryParse(Model[i + 1].DiscountRate, out double discountRateNext) && discountRateNext > 0)
                                    {
                                        <p class="pricing-tag ms-auto">Kadar tasarruf edin <span>@Model[i + 1].DiscountRate%</span></p>
                                    }
                                </div>
                                <ul class="pricing-list mt-3">
                                    @if (Model[i + 1].Features != null)
                                    {
                                        foreach (var feature in Model[i + 1].Features)
                                        {
                                            <li class="pricing-list-item">@feature</li>
                                        }
                                    }
                                </ul>
                                <a class="link-fx-1 color-contrast-higher mt-4" href="ticket.html">
                                    <span>Bilet Satın Al</span>
                                    <svg class="icon" viewBox="0 0 32 32" aria-hidden="true">
                                        <g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
                                            <circle cx="16" cy="16" r="15.5"></circle>
                                            <line x1="10" y1="18" x2="16" y2="12"></line>
                                            <line x1="16" y1="12" x2="22" y2="18"></line>
                                        </g>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</section>
