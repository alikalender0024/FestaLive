@model List<Footer>

<footer class="site-footer">
    <div class="site-footer-top">
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-lg-6 col-12 text-center">
                    <h2 class="text-white mb-lg-0">FestaLive</h2>
                </div>

            </div>
        </div>
    </div>


    <div class="container">
        <div class="row">

            <div class="col-lg-6 col-12 mb-4 pb-2">
                <h5 class="site-footer-title mb-3">Bağlantılar</h5>

                <ul class="site-footer-links">
                    <li class="site-footer-link-item">
                        <a href="/Default/Index/#section_1" class="site-footer-link">Ana Sayfa</a>
                    </li>

                    <li class="site-footer-link-item">
                        <a href="/Default/Index/#section_2" class="site-footer-link">Hakkımızda</a>
                    </li>

                    <li class="site-footer-link-item">
                        <a href="/Default/Index/#section_3" class="site-footer-link">Sanatçılar</a>
                    </li>

                    <li class="site-footer-link-item">
                        <a href="/Default/Index/#section_4" class="site-footer-link">Program</a>
                    </li>

                    <li class="site-footer-link-item">
                        <a href="/Default/Index/#section_5" class="site-footer-link">Fiyatlandırma</a>
                    </li>

                    <li class="site-footer-link-item">
                        <a href="/Default/Index/#section_6" class="site-footer-link">İletişim</a>
                    </li>
                </ul>
            </div>


            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 col-12 mb-4 mb-lg-0">
                    <h5 class="site-footer-title mb-3">Bir sorunuz mu var?</h5>

                    <p class="text-white d-flex mb-1">
                        <a href="tel: @item.Phone" class="site-footer-link">
                            @item.Phone
                        </a>
                    </p>

                    <p class="text-white d-flex">
                        <a href="mailto:@item.EMail" class="site-footer-link">
                            @item.EMail
                        </a>
                    </p>
                </div>

                <div class="col-lg-3 col-md-6 col-11 mb-4 mb-lg-0 mb-md-0">
                    <h5 class="site-footer-title mb-3">Konum</h5>

                    <p class="text-white d-flex mt-3 mb-2">
                        @item.Location
                    </p>

                    <a class="link-fx-1 color-contrast-higher mt-3" href="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12490.896059355116!2d36.77146925402331!3d38.49400979345238!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x152d3b33c87e7ce1%3A0x3e193707dd73d72e!2zRGHEn2zEsWNhLCA0NjU2NyBBZsWfaW4vS2FocmFtYW5tYXJhxZ8!5e0!3m2!1str!2str!4v1719696423618!5m2!1str!2str">
                        <span>Google Haritalar</span>
                        <svg class="icon" viewBox="0 0 32 32" aria-hidden="true">
                            <g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="16" cy="16" r="15.5"></circle>
                                <line x1="10" y1="18" x2="16" y2="12"></line>
                                <line x1="16" y1="12" x2="22" y2="18"></line>
                            </g>
                        </svg>
                    </a>

                </div>
            }

        </div>
    </div>

    <div class="site-footer-bottom">
        <div class="container">
            <div class="row">

                <div class="col-lg-3 col-12 mt-5">
                    <p class="copyright-text">Copyright © 2024 FestaLive Company</p>
                    <p class="copyright-text">Distributed by: <a href="https://github.com/walikalender">KalenderSoftware</a></p>
                </div>

                <div class="col-lg-8 col-12 mt-lg-5">
                    <ul class="site-footer-links">
                        <li class="site-footer-link-item">
                            <a href="#" class="site-footer-link">Şartlar ve Koşullar</a>
                        </li>

                        <li class="site-footer-link-item">
                            <a href="#" class="site-footer-link">Gizlilik Politikası</a>
                        </li>

                        <li class="site-footer-link-item">
                            <a href="#" class="site-footer-link">Geri Dönüşleriniz</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>
