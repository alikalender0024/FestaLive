@model FeatureAndSocialMediaViewModel

<section class="hero-section" id="section_1">
    <div class="section-overlay"></div>

    @foreach (var item in Model.Features)
    {
        <div class="container d-flex justify-content-center align-items-center">
            <div class="row">

                <div class="col-12 mt-auto mb-5 text-center">
                    <small>@item.Subtitle</small>

                    <h1 class="text-white mb-5">@item.Title</h1>

                    <a class="btn custom-btn smoothscroll" href="#section_2">Hadi Başlayalım</a>
                </div>

                <div class="col-lg-12 col-12 mt-auto d-flex flex-column flex-lg-row text-center">
                    <div class="date-wrap">
                        <h5 class="text-white">
                            <i class="custom-icon bi-clock me-2"></i>
                            @item.StartDate.Day - @item.EndDate.Day @item.EndDate.ToString("MMMM") @item.EndDate.Year
                        </h5>
                    </div>

                    <div class="location-wrap mx-auto py-3 py-lg-0">
                        <h5 class="text-white">
                            <i class="custom-icon bi-geo-alt me-2"></i>
                            @item.Location
                        </h5>
                    </div>

                    <div class="social-share">
                        <ul class="social-icon d-flex align-items-center justify-content-center">
                            <span class="text-white me-3">Paylaş:</span>
                            @foreach (var socialMedia in Model.SocialMedias)
                            {
                                <li class="social-icon-item">
                                    <a href="@socialMedia.Url" class="social-icon-link">
                                        <span class="@socialMedia.IconUrl"></span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>



                </div>
            </div>
        </div>

        <div class="video-wrap">
            <video autoplay="" loop="" muted="" class="custom-video" poster="">
                <source src="~/@item.ImageUrl" type="video/mp4">

                Your browser does not support the video tag.
            </video>
        </div>
    }
    </div>
</section>
