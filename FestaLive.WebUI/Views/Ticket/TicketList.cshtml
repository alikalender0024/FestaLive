@model List<Ticket>

@{
    ViewData["Title"] = "TicketList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Admin Paneli</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Bilet Listesi</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">Bilet Listesi</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-items-center">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ad Soyad</th>
                            <th scope="col">E-Posta</th>
                            <th scope="col">Telefon</th>
                            <th scope="col">Bilet Türü</th>
                            <th scope="col">Bilet Sayısı</th>
                            <th scope="col">Ekstra İstekler</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model)
                        {
                            <tr>
                                <td>@ticket.Id</td>
                                <td>@ticket.FullName</td>
                                <td>@ticket.Email</td>
                                <td>@ticket.Phone</td>
                                <td>@ticket.TicketType</td>
                                <td>@ticket.NumberOfTickets</td>
                                <td>@ticket.AdditionalRequest</td>
                                <td>
                                    <form method="post" action="/Ticket/DeleteTicket/@ticket.Id" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bilet silinsin mi?')">Sil</button>
                                    </form>
                                </td>
                                <td><a href="/Ticket/UpdateTicket/@ticket.Id" class="btn btn-warning btn-sm">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

