@model List<SocialMedia>
@{
    ViewData["Title"] = "SocialMediaList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Admin Paneli</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Sosyal Medya Listesi</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="/SocialMedia/CreateSocialMedia" class="btn btn-sm btn-success">Yeni Sosyal Medya Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">Sosyal Medya Listesi</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-items-center">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Platform Adı</th>
                            <th scope="col">İkon</th>
                            <th scope="col">URL</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var socialMedia in Model)
                        {
                            <tr>
                                <td>@socialMedia.Id</td>
                                <td>@socialMedia.PlatformName</td>
                                <td>@socialMedia.IconUrl</td>
                                <td>@socialMedia.Url</td>
                                <td>
                                    <form method="post" action="/SocialMedia/DeleteSocialMedia/@socialMedia.Id" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Sosyal medya silinsin mi?')">Sil</button>
                                    </form>
                                </td>
                                <td>
                                    <a href="/SocialMedia/UpdateSocialMedia/@socialMedia.Id" class="btn btn-warning btn-sm">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mt-4">
                    <a href="/SocialMedia/CreateSocialMedia" class="btn btn-success">Yeni Sosyal Medya Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
